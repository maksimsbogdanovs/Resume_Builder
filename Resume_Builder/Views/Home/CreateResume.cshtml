@model Resume_Builder.Models.ResumeModel

@{ViewData["Title"] = "CreateResume";}

<h1>Izveido savu CV</h1>
<br />
<h3>Pamatdati</h3>
<form action="/home/createresume" method="post">
    <div class="form-group">
        <label for="name">Vārds:</label>
        <input type="text" name="name" asp-for="Name">
 
    </div>
    <div class="form-group">
        <label for="surname">Uzvārds:</label>
        <input type="text" name="surname" asp-for="Surname">

    </div>
    <div class="form-group">
        <label for="email">E-pasts:</label>
        <input type="text" name="email" asp-for="Email">

    </div>
    <div class="form-group">
        <label for="phone">Telefona numurs:</label>
        <input type="text" name="phone" asp-for="Phone">

    </div>
    <div class="form-group">
        <label for="adress">Adrese</label>
        <input type="text" name="adress" asp-for="Adress">
     
    </div>
    <div class="form-group">
        <label for="city">Pilsēta</label>
        <input type="text" name="city" asp-for="City">
        
    </div>
    <div class="form-group">
        <label for="country">Valsts</label>
        <input type="text" name="country" asp-for="Country">
    </div>
    <div class="form-group">
        <label for="indexx">Indekss</label>
        <input type="text" name="indexx" asp-for="Indexx">
    </div>

    <h3>Izglītība</h3>

    <div class="form-group">
        <label for="university">Izglītības iestāde:</label>
        <input type="text" name="university" asp-for="University">
    </div>
    <div class="form-group">
        <label for="study">Studiju virziens:</label>
        <input type="text" name="study" asp-for="Study">
    </div>
    <div class="form-group">
        <label for="degree">Izglītības līmenis:</label>
        <input type="text" name="degree" asp-for="Degree">
    </div>
    <div class="form-group">
        <label for="studyTimeFrom">Mācības no (gads): </label>
        <input type="text" name="studyTimeFrom" asp-for="StudyTimeFrom">
    </div>
    <div class="form-group">
        <label for="studyTimeTo">Mācības līdz (gads): </label>
        <input type="text" name="studyTimeTo" asp-for="StudyTimeTo">
    </div>

    <h3>Darba pieredze</h3>

    <div class="form-group">
        <label for="job">Uzņēmuma nosaukums</label>
        <input type="text" name="job" asp-for="Job">
    </div>
    <div class="form-group">
        <label for="title">Ieņemamais amats</label>
        <input type="text" name="title" asp-for="Title">
    </div>
    <div class="form-group">
        <label for="description">Darba pienākumi / Apraksts </label>
        <textarea name="description" asp-for="Description"></textarea>
    </div>
    <div class="form-group">
        <label for="workTimeFrom">Darba attiecības uzsāktas (gads):</label>
        <input type="text" name="workTimeFrom" asp-for="WorkTimeFrom">
    </div>
    <div class="form-group">
        <label for="workTimeTo">Darba attiecības pārtrauktas (gads):</label>
        <input type="text" name="workTimeTo" asp-for="WorkTimeTo">
    </div>

    <button type="submit" class="btn btn-primary">Izveidot CV</button>

</form>
